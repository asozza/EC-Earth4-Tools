<?xml version="1.0"?>

<simulation>

  <context id="xios">
    <variable_definition>

      <variable id="info_level" type="int">5</variable>
      <variable id="print_file" type="bool">false</variable>

      <variable id="optimal_buffer_size" type="string">performance</variable>

      <variable id="using_server" type="bool">true</variable>
      <variable id="using_oasis" type="bool">true</variable>
      <variable id="call_oasis_enddef" type="bool">false</variable>
{%- if 'nemo' in model_config.components %}
      <variable id="oasis_codes_id" type="string">OpenIFS,oceanx</variable>
{%- else %}
      <variable id="oasis_codes_id" type="string">OpenIFS</variable>
{%- endif %}

    </variable_definition>
  </context>

  <context id="oifs" src="./context_oifs.xml"/>
{%- if 'nemo' in model_config.components %}  
  <context id="nemo" src="./context_nemo.xml"/>
{%- endif %}

</simulation>
